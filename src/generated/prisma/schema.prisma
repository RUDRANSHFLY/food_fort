generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  MEMBER
}

enum Country {
  INDIA
  NEPAL
  FRANCE
  AMERICA
  BHUTAN
}

model User {
  id             String    @id @default(uuid())
  role           Role
  name           String?
  email          String?   @unique
  emailVerfied   DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now())
}

model Restaurant {
  id        String   @id @default(uuid())
  name      String
  country   Country
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
